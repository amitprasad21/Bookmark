{
  "manifest_version": 3,
  "name": "Smart Bookmark - Quick Save",
  "version": "1.0.0",
  "description": "One-click bookmarking to your Smart Bookmark web app (no secrets in extension).",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
